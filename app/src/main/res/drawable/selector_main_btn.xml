<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/main_btn_corner"/>
            <gradient
                android:startColor="#4c92d3"
                android:endColor="@color/main_color"
                android:type="linear"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/main_btn_corner"/>
            <gradient
                android:startColor="#884c92d3"
                android:endColor="#8872abdf"
                android:type="linear"/>
           <!-- <solid android:color="#883F51B5"/>-->
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/main_btn_corner"/>
            <gradient
                android:startColor="#884c92d3"
                android:endColor="#8872abdf"
                android:type="linear"/>
            <!-- <solid android:color="#883F51B5"/>-->
        </shape>
    </item>

</selector>