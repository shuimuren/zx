<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhixing.work.zhixin.view.card.AddEducationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_education"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/linerlayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x24"
                android:text="学历"
                android:textColor="@color/linerlayout_tv"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_toLeftOf="@+id/iv_education"
                android:gravity="right"
                android:hint="请选择学历"
                android:textColor="@color/color_303030"
                android:textColorHint="@color/hint"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/x24"
                android:src="@drawable/icon_next" />

        </RelativeLayout>
        <!--毕业院校-->

        <RelativeLayout
            android:id="@+id/rl_graduate_college"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/linerlayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x24"
                android:text="毕业院校"
                android:textColor="@color/linerlayout_tv"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/graduate_college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x24"
                android:layout_toLeftOf="@+id/iv_graduate_college"
                android:background="@null"

                android:hint="请填写毕业学校"
                android:textColorHint="@color/hint"
                android:gravity="right"
                android:textColor="@color/color_303030"
                android:textSize="16sp"></TextView>

            <ImageView
                android:id="@+id/iv_graduate_college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/x24"
                android:src="@drawable/icon_next" />
            />
        </RelativeLayout>
        <!--入校时间-->
        <RelativeLayout
            android:id="@+id/rl_school_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/linerlayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x24"
                android:text="入校时间"
                android:textColor="@color/linerlayout_tv"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/school_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_toLeftOf="@+id/iv_school_time"
                android:textColor="@color/color_303030"
                android:hint="请选择入校日期"
                android:textColorHint="@color/hint"
                android:gravity="right"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_school_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/x24"
                android:src="@drawable/icon_next" />

        </RelativeLayout>
        <!--毕业时间-->
        <RelativeLayout
            android:id="@+id/rl_graduation_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/linerlayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x24"
                android:text="毕业时间"
                android:textColor="@color/linerlayout_tv"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/graduation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_toLeftOf="@+id/iv_graduation_time"
                android:textColor="@color/color_303030"
                android:hint="请选择毕业日期"
                android:textColorHint="@color/hint"
                android:gravity="right"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_graduation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/x24"
                android:src="@drawable/icon_next" />

        </RelativeLayout>
        <!--专业-->
        <RelativeLayout
            android:id="@+id/rl_major"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/linerlayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x24"
                android:text="专业"
                android:textColor="@color/linerlayout_tv"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x24"
                android:layout_toLeftOf="@+id/iv_major"
                android:background="@null"

                android:textColor="@color/color_303030"
                android:hint="请输入专业"
                android:textColorHint="@color/hint"
                android:gravity="right"
                android:textSize="@dimen/font_size_16sp" />

            <ImageView
                android:id="@+id/iv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/x24"
                android:src="@drawable/icon_next" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:layout_alignParentBottom="true"
            android:background="@color/linerlayout">

            <Button
                android:id="@+id/sava"
                android:layout_width="@dimen/x640"
                android:layout_height="@dimen/y80"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_blue_normal_shape"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
