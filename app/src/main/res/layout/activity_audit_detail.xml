<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_80"
        android:src="@drawable/icon_avatar" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/font_big"
        android:textStyle="bold"
        tools:text="阿三" />

    <TextView
        android:id="@+id/tv_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/minor_text_color"
        tools:text="13137558109" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_round_corner_color_666"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理员"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_apply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_toRightOf="@id/tv_manager"
            android:text="2018年05月20日"
            android:textColor="#559fed"
            android:textSize="@dimen/font_size_14sp" />

        <TextView
            android:id="@+id/tv_apply_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_apply_time"
            android:text="申请入职:"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14sp" />

        <TextView
            android:id="@+id/tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_apply_time"
            android:textColor="@color/black"
            tools:text="alalalalalala" />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="@dimen/main_btn_height"
            android:layout_weight="3"
            android:background="@drawable/selector_btn_reject"
            android:text="@string/btn_reject"
            android:textColor="#ff6666"
            android:textSize="@dimen/font_big" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="0dp"
            android:layout_height="@dimen/main_btn_height"
            android:layout_weight="3"
            android:background="@drawable/selector_main_btn"
            android:text="@string/btn_agree"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big" />
    </LinearLayout>

</LinearLayout>