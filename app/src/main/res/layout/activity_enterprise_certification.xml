<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhixing.work.zhixin.view.companyCard.EnterpriseCertificationActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhixing.work.zhixin.widget.ElasticScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#f5f5f5"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/gantanh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="请确认公司名称和营业执照上的名称一致" />
                </LinearLayout>

                <!--姓名-->


                <RelativeLayout
                    android:id="@+id/rl_corporate_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/linerlayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="公司名称"
                        android:textColor="@color/linerlayout_tv"
                        android:textSize="16sp" />

                    <TextView

                        android:id="@+id/corporate_name"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/corporate_name_right"
                        android:background="@null"
                        android:gravity="center"
                        android:textColor="@color/color_303030" />

                    <ImageView
                        android:id="@+id/corporate_name_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_next" />
                </RelativeLayout>

                <View style="@style/line"></View>

                <RelativeLayout
                    android:id="@+id/rl_corporate_nature"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/linerlayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="公司资质"
                        android:textColor="@color/linerlayout_tv"
                        android:textSize="16sp" />

                    <TextView

                        android:id="@+id/corporate_nature"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/corporate_nature_right"
                        android:background="@null"
                        android:gravity="center"
                        android:textColor="@color/color_303030" />

                    <ImageView
                        android:id="@+id/corporate_nature_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_next" />
                </RelativeLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_f5f5f5"></View>

                <RelativeLayout
                    android:id="@+id/rl_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/linerlayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="法人姓名"
                        android:textColor="@color/linerlayout_tv"
                        android:textSize="16sp" />

                    <TextView

                        android:id="@+id/name_ed"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/name_right"
                        android:background="@null"
                        android:gravity="center"
                        android:textColor="@color/color_303030" />

                    <ImageView
                        android:id="@+id/name_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_next" />
                </RelativeLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_f5f5f5"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="上传营业执照原件照片"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/dp_16" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="25dp"
                    android:background="@color/white"></android.support.v7.widget.RecyclerView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="
1. 仅限PNG或JPG格式，大小限制在3M以内；
\n\n
2. 仅用于审核，不会向第三方透露，请放心上传！
"></TextView>

            </LinearLayout>
        </com.zhixing.work.zhixin.widget.ElasticScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/linerlayout">

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/btn_blue_normal_shape"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
