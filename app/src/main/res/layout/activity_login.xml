<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <!--选择用户类型-->

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/login_card_width"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/rl_login"
        android:layout_centerHorizontal="true"
        android:background="@drawable/png_shadow"
        app:cardCornerRadius="@dimen/corner_radius_big"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="@color/color_register"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/login_card_margin"
        android:layout_marginRight="@dimen/login_card_margin"
        android:layout_marginTop="@dimen/dp_100"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/corner_radius_big"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--用户类型选择-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55">

                <TextView
                    android:id="@+id/tv_login_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/personage_login"
                    android:textColor="@color/login_person_tv"
                    android:textSize="@dimen/font_list_right" />

                <TextView
                    android:id="@+id/tv_login_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/enterprise"
                    android:textColor="#408acf"
                    android:textSize="@dimen/font_normal" />

            </RelativeLayout>

            <!--用户手机号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_35"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/phone_number"
                    android:textColor="#98c3ec"
                    android:textSize="@dimen/font_head" />

                <com.zhixing.work.zhixin.widget.ClearEditText
                    android:id="@+id/phone_ed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@null"
                    android:inputType="number" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_normal"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:background="#98c3ec"></View>

            <!--密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_25"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/pass_word"
                    android:textColor="#98c3ec"
                    android:textSize="@dimen/font_head" />

                <EditText
                    android:id="@+id/password_ed"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/show_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_20"
                    android:padding="@dimen/dp_6"
                    android:src="@drawable/icon_hide" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_normal"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#98c3ec">

            </View>

            <!--登录按钮-->
            <TextView
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@drawable/btn_blue_normal_shape"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_35"
                android:paddingRight="@dimen/dp_35"
                android:paddingTop="@dimen/dp_3"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/font_head" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_15">
                <!--忘记密码-->
                <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/forget_password"
                    android:textSize="@dimen/font_head" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
