<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhixing.work.zhixin.view.resume.PersonalDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llAvatar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="头像"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_16sp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/icon_next" />
        </LinearLayout>

        <View style="@style/line" />

        <LinearLayout
            android:id="@+id/llnick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_16sp" />

            <TextView
                android:id="@+id/nick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/font_size_14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/icon_next" />
        </LinearLayout>

        <View style="@style/line" />

        <LinearLayout
            android:id="@+id/ll_date_birth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:gravity="center_vertical"
                android:text="出生日期"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_16sp" />

            <TextView
                android:id="@+id/date_birth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/font_size_14sp" />
        </LinearLayout>
        <View style="@style/line" />

        <LinearLayout
            android:id="@+id/ll_first_working_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:gravity="center_vertical"
                android:text="首次工作时间"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_16sp" />

            <TextView
                android:id="@+id/first_working_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/font_size_14sp" />
        </LinearLayout>

        <View style="@style/line" />

    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
