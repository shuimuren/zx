<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.zixin.login.activity.RegistActivity">



    <android.support.v7.widget.CardView
        android:id="@+id/cd_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/corner_radius_big"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--用户类型选择-->
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:id="@+id/tv_regist_personl_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/personal_register"
                    android:textColor="@color/login_person_tv"
                    android:textSize="@dimen/font_bigger" />

                <TextView
                    android:id="@+id/tv_regist_company_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/enterprise"
                    android:textColor="@color/login_company_tv"
                    android:textSize="@dimen/font_normal" />

            </RelativeLayout>

            <!--用户昵称-->

            <!--手机号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/phone_number"
                    android:textColor="#98c3ec"
                    android:textSize="@dimen/font_normal" />

                <com.zhixing.work.zhixin.widget.ClearEditText
                    android:id="@+id/regist_phone_num_ed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@null"
                    android:inputType="phone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_normal"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#98c3ec">

            </View>
            <!--验证码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="@string/verification_code"
                    android:textColor="#98c3ec"
                    android:textSize="@dimen/font_normal" />

                <com.zhixing.work.zhixin.widget.ClearEditText
                    android:id="@+id/code_ed"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@null" />

                <TextView
                    android:id="@+id/btn_regist_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="#4d92d3"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:text="获取验证码"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_normal"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#98c3ec">

            </View>
            <!--密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <com.zhixing.work.zhixin.widget.ClearEditText
                    android:id="@+id/password_ed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@null"
                    android:digits="1234567890abcdefghijklmnopqrstuvwxyz"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:textColorHint="#98c3ec"
                    android:textSize="@dimen/font_edit_text" />

                <RadioButton
                    android:id="@+id/iv_hide_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_15"
                    android:button="@null"
                    android:drawableLeft="@drawable/icon_hide"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_normal"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#98c3ec">

            </View>
            <!--确定按钮-->
            <TextView
                android:id="@+id/btn_go_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@drawable/btn_blue_normal_shape"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_35"
                android:paddingRight="@dimen/dp_35"
                android:paddingTop="@dimen/dp_3"
                android:text="@string/register"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_head" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/regist_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiobutton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/had_read_and_agree" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agreement"
                    android:textColor="#408acf" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/cd_regist"
        android:layout_centerHorizontal="true"
        android:background="@drawable/png_shadow"
        app:cardCornerRadius="@dimen/corner_radius_big"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/regist_tv"
            android:textSize="@dimen/font_head" />
    </android.support.v7.widget.CardView>
</RelativeLayout>

