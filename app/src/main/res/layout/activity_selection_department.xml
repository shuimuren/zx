<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhixing.work.zhixin.view.myCenter.organizational.DepartmentManagementActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/departmentTitleList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View style="@style/division_view" />

    <TextView
        android:id="@+id/tv_new_add_department"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:drawableLeft="@drawable/icon_add"
        android:drawablePadding="@dimen/padding_big"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_big"
        android:text="@string/new_add_department"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal" />

    <View style="@style/division_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/department_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_list_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_list_null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/text_department_is_null"
            android:textSize="@dimen/font_size_14sp" />
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>



