<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:layout_collapseMode="parallax"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/check_box_monday"
            style="@style/dialog_check_box_style"
            android:text="星期一" />

        <View style="@style/line" />

        <CheckBox
            android:id="@+id/check_box_tuesday"
            style="@style/dialog_check_box_style"
            android:text="星期二" />

        <View style="@style/line" />

        <CheckBox
            android:id="@+id/check_box_wednesday"
            style="@style/dialog_check_box_style"
            android:text="星期三" />

        <View style="@style/line" />

        <CheckBox
            android:id="@+id/check_box_thursday"
            style="@style/dialog_check_box_style"
            android:text="星期四" />

        <View style="@style/line" />

        <CheckBox
            android:id="@+id/check_box_friday"
            style="@style/dialog_check_box_style"
            android:text="星期五" />

        <View style="@style/line" />

        <CheckBox
            android:id="@+id/check_box_saturday"
            style="@style/dialog_check_box_style"
            android:text="星期六" />

        <View style="@style/line" />

        <CheckBox
            android:id="@+id/check_box_sunday"
            style="@style/dialog_check_box_style"
            android:text="星期日" />

        <View style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:background="@drawable/color_white_clickable"
                android:textColor="#c1c1c1"/>

            <View
               android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_e5e5e5"
                />

            <Button
                android:id="@+id/btn_make_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/make_sure"
                android:background="@drawable/color_white_clickable"
                android:textColor="@color/main_color"/>


        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>