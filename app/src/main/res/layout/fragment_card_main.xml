<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_back"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flCardTabContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_back"
        android:paddingRight="@dimen/dp_60"/>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCardAptitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/selector_card_tv_bg"
            android:gravity="center"
            android:paddingRight="2dp"
            android:text="@string/card_aptitude_selected"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvCardBasic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/selector_card_tv_bg"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/card_basic_default"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvCardSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/selector_card_tv_bg"
            android:gravity="center"
            android:paddingRight="2dp"
            android:text="@string/card_shill_default"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvCarLuck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/selector_card_tv_bg"
            android:gravity="center"
            android:paddingRight="2dp"
            android:text="@string/card_luck_default"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvCardCareer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/selector_card_tv_bg"
            android:gravity="center"
            android:paddingRight="2dp"
            android:text="@string/card_career_default"
            android:textColor="@color/white" />

    </LinearLayout>

</FrameLayout>