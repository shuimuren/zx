<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llCardContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/basics"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text_bg_shape"
                android:gravity="center"
                android:text="基础"
                android:textColor="@drawable/text_shape"
                android:textSize="@dimen/font_list_right" />

            <TextView
                android:id="@+id/senior"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text_bg_shape"
                android:gravity="center"
                android:text="高级"
                android:textColor="@drawable/text_shape"
                android:textSize="@dimen/font_list_right" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/flCardContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/llCardContentEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_weight="1"
        android:background="@drawable/bg_back_in"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/image_card_null"
            android:src="@drawable/img_nor_03" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="OMG,什么都没有" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="请去完善卡牌" />


        <Button
            android:id="@+id/btnPerfectCard"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/btn"
            android:text="完善卡牌"
            android:textColor="#f5e9b4" />

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>