<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhixing.work.zhixin.view.card.back.fragment.CardCounterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/bg_back_in"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_basics"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text_bg_shape"
                android:gravity="center"
                android:text="基础"
                android:textColor="@drawable/text_shape"
                android:textSize="@dimen/font_list_right" />

            <TextView
                android:id="@+id/tv_senior"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text_bg_shape"
                android:gravity="center"
                android:text="高级"
                android:textColor="@drawable/text_shape"
                android:textSize="@dimen/font_list_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_user_name" />

                <TextView
                    android:id="@+id/tv_card_name"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_email" />

                <TextView
                    android:id="@+id/tv_card_email"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_department" />

                <TextView
                    android:id="@+id/tv_card_department"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_position" />

                <TextView
                    android:id="@+id/tv_card_position"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_work_telephone" />

                <TextView
                    android:id="@+id/tv_card_work_telephone"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_code" />

                <TextView
                    android:id="@+id/tv_card_code"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_company_telephone" />

                <TextView
                    android:id="@+id/tv_card_company_telephone"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_work_place" />

                <TextView
                    android:id="@+id/tv_card_work_place"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_basic_editor"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/btn"
                android:text="编辑"
                android:textColor="#f5e9b4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_senior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_begin_time" />

                <TextView
                    android:id="@+id/tv_card_work_begin_time"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_user_role_type" />

                <TextView
                    android:id="@+id/tv_card_user_role_type"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_user_status" />

                <TextView
                    android:id="@+id/tv_card_user_status"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_test_time" />

                <TextView
                    android:id="@+id/tv_card_test_time"
                    style="@style/style_card_text_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal">

                <TextView
                    style="@style/style_card_text_left"
                    android:text="@string/job_card_formal_time" />

                <TextView
                    android:id="@+id/tv_card_formal_time"
                    style="@style/style_card_text_right" />

            </LinearLayout>
            <Button
                android:id="@+id/btn_senior_editor"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/btn"
                android:text="编辑"
                android:textColor="#f5e9b4" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_weight="1"
            android:background="@drawable/bg_back_in"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/image_card_null"
                android:src="@drawable/img_nor_03" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="OMG,什么都没有" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:text="请去完善卡牌" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30">

                <Button
                    android:id="@+id/perfect_card"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn"
                    android:text="完善卡牌"
                    android:textColor="#f5e9b4" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
