<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhixing.work.zhixin.view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/btn_write_per_data">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="职业卡牌"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
        <!--无卡牌界面-->


        <LinearLayout
            android:id="@+id/no_cord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_front"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_cord"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"

                android:background="@drawable/img_card"
                android:visibility="gone">


                <ImageView
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/y294"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y180"
                    android:src="@drawable/img_person" />
                <!--文字提醒-->
                <LinearLayout
                    android:layout_width="@dimen/x322"
                    android:layout_height="@dimen/y112"
                    android:layout_marginLeft="@dimen/x120"
                    android:layout_marginTop="@dimen/y514"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="请点击下方创建按钮"
                        android:textColor="#7d5023"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/y10"
                        android:text="立刻生成您的专属卡牌"
                        android:textColor="#7d5023"
                        android:textSize="14sp" />
                </LinearLayout>
                <!--创建卡牌按钮-->
                <Button
                    android:id="@+id/create_card"
                    android:layout_width="@dimen/x320"
                    android:layout_height="@dimen/y88"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/x120"
                    android:layout_marginTop="@dimen/y676"
                    android:background="@drawable/btn"
                    android:text="创建卡牌"
                    android:textColor="#f5e9b4" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:visibility="gone">


                <RelativeLayout
                    android:id="@+id/have_cord"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"

                    >

                    <RelativeLayout
                        android:id="@+id/rl_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:background="@color/bg_main">

                        <ImageView
                            android:id="@+id/avatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/img_man" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/avatar"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="点此上传照片" />
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/rl_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/rl_avatar">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/card_user_id"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text=""
                            android:textColor="@color/white" />

                        <TextView

                            android:id="@+id/level"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_user_num"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/rl_name"
                        android:background="@drawable/card_bot"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_nike_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@+id/stars"
                                    android:layout_alignStart="@+id/stars"
                                    android:layout_below="@+id/rl_name"
                                    android:text="昵&#12288;昵 :  " />

                                <TextView
                                    android:id="@+id/nikename"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@+id/stars"
                                    android:layout_alignStart="@+id/stars"
                                    android:layout_below="@+id/rl_name"
                                    android:text="手机号 :  " />

                                <TextView
                                    android:id="@+id/phone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@+id/stars"
                                    android:layout_alignStart="@+id/stars"
                                    android:layout_below="@+id/rl_name"
                                    android:text="邮&#12288;箱 :  " />

                                <TextView
                                    android:id="@+id/mail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_motto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@+id/stars"
                                    android:layout_alignStart="@+id/stars"
                                    android:layout_below="@+id/rl_name"
                                    android:text="座右铭 :  " />

                                <TextView
                                    android:id="@+id/motto"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="" />
                            </LinearLayout>
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_30">

                            <Button
                                android:id="@+id/perfect_card"
                                android:layout_width="@dimen/x320"
                                android:layout_height="@dimen/y80"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/btn"
                                android:text="完善卡牌"
                                android:textColor="#f5e9b4" />
                        </RelativeLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/card_bg" />


                    <com.willy.ratingbar.ScaleRatingBar xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginTop="6dp"
                        app:srb_clearRatingEnabled="true"
                        app:srb_clickable="true"
                        app:srb_drawableEmpty="@drawable/icon_star_nor"
                        app:srb_drawableFilled="@drawable/icon_star_light"
                        app:srb_isIndicator="false"
                        app:srb_numStars="10"
                        app:srb_rating="0"
                        app:srb_scrollable="true"
                        app:srb_starHeight="15dp"
                        app:srb_starPadding="2dp"
                        app:srb_starWidth="15dp"
                        app:srb_stepSize="1"></com.willy.ratingbar.ScaleRatingBar>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/type_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hd_logo"></ImageView>
                " />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_1_nor" />

                <ImageView
                    android:id="@+id/img_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_2_nor" />

                <ImageView
                    android:id="@+id/img_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_3_nor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"></LinearLayout>


                <ImageView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_more" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.ContentFrameLayout>
