<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_department"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_item_height"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:padding="@dimen/padding_normal">

    <ImageView
        android:id="@+id/img_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"
        android:src="@drawable/selector_department_item" />

    <TextView
        android:id="@+id/tv_department_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/font_list_left"
        tools:text="name" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity=""
        android:layout_marginRight="@dimen/margin_big"
        android:drawablePadding="@dimen/padding_normal"
        android:gravity="center_vertical"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/font_list_right"
        tools:text="2" />

    <ImageView
        android:id="@+id/img_mark"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_next" />

</LinearLayout>