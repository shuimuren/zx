<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="@dimen/dp_10"
    app:cardBackgroundColor="#999999"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardMaxElevation="@dimen/dp_5"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20">

        <ImageView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/img_company_logo"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:src="@drawable/icon_avatar" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/img_company_logo"
            android:textSize="18sp"
            android:text="aaaaaa"/>

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/img_company_logo"
            android:layout_below="@id/tv_company_name"
            android:layout_marginLeft="@dimen/dp_5"
            app:srb_clearRatingEnabled="true"
            app:srb_clickable="false"
            app:srb_drawableEmpty="@drawable/icon_star_nor"
            app:srb_drawableFilled="@drawable/icon_star_light"
            app:srb_isIndicator="false"
            app:srb_rating="0"
            app:srb_scrollable="false"
            app:srb_starHeight="15dp"
            app:srb_starPadding="2dp"
            app:srb_starWidth="15dp"
            app:srb_stepSize="1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>