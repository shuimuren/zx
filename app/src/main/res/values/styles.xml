<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:windowBackground">@color/color_main_bg</item>
    </style>

    <style name="Theme.beginBackground" parent="@android:style/Theme.Translucent.NoTitleBar" />

    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="default_dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_e5e5e5</item>
    </style>

    <style name="division_view">
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_e5e5e5</item>
    </style>

    <style name="interval">
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_e5e5e5</item>
    </style>

    <style name="layout_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="type_add_resume_item" parent="layout_wrap_content">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@drawable/icon_add</item>
        <item name="android:drawablePadding">@dimen/padding_big</item>
        <item name="android:textColor">#408acf</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="type_clock_time_text">
        <item name="android:width">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:background">@drawable/selector_clock_time</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:textColor">@color/color_clock_text</item>
    </style>

    <style name="style_item_left_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_big</item>
        <item name="android:paddingBottom">@dimen/padding_big</item>
        <item name="android:paddingLeft">@dimen/padding_big</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">#212121</item>
        <item name="android:lines">1</item>
    </style>

    <style name="style_linear_layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/color_white_clickable</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_item_right_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:textColor">#c3c3c3</item>
        <item name="android:drawableRight">@drawable/icon_next</item>
        <item name="android:drawablePadding">@dimen/padding_normal</item>
    </style>

    <style name="style_bottom_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_btn_height</item>
        <item name="android:background">@drawable/selector_main_btn</item>
        <item name="android:layout_marginLeft">@dimen/dp_40</item>
        <item name="android:layout_marginRight">@dimen/dp_40</item>
        <item name="android:layout_marginBottom">@dimen/dp_15</item>
        <item name="android:textSize">@dimen/font_btn_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_check_box_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/check_box_style_selector</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">@drawable/color_white_clickable</item>
    </style>

</resources>
